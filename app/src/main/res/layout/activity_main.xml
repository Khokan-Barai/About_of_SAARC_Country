<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.khokan.user.now.MainActivity">

    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:itemTextColor="@color/darkgray"
        app:itemIconTint="@color/darkgray"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/world"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Members of SAARC"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/bng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#5050"
                android:drawableLeft="@drawable/bangladesh1"
                android:text=" Bangladesh"
                android:textAllCaps="false"
                android:textSize="25dp"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/ind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" India"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/india1"
                android:textSize="25dp"
                android:background="#5050"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/nep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Nepal"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/nepal1"
                android:textSize="25dp"
                android:background="#5050"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/pak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Pakistan"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/pakistan1"
                android:textSize="25dp"
                android:background="#5050"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/mal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Maldives"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/maldives1"
                android:textSize="25dp"
                android:background="#5050"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/sri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Sri Lanka"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/sri_lanka"
                android:textSize="25dp"
                android:background="#5050"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/bhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Bhutan"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/bhutan1"
                android:textSize="25dp"
                android:background="#5050"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/afg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Afghanistan"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/afghanistan1"
                android:textSize="25dp"
                android:background="#5050"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>
